{
  "name": "ETHZ Question Tool",
  "description": "Extension used for analysis",
  "version": "0.1",

  "permissions": [
    "tabs", "webRequest", "webRequestBlocking", "<all_urls>", "storage",
    "contentSettings"
  ],

  "browser_action": {
    "default_icon": "./img/Question_mark_16.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["./libs/jquery-1.11.2.min.js", "./bin/background-compiled.js"]
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": ["./libs/jquery-1.11.2.min.js", "./bin/content-compiled.js"],
      "run_at": "document_start"
    }
  ],
  "manifest_version": 2
}
