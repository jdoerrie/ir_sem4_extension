{
  "name": "Highlight some phrases",
  "description": "Hightlight some pre defined text from websql database after page loads",
  "version": "0.1",

  "permissions": [
    "tabs", "webRequest", "webRequestBlocking", "<all_urls>", "storage",
    "contentSettings"
  ],

  "browser_action": {
    "default_icon": "img/icon.png"
  },

  "background": {
    "scripts": ["libs/jquery-1.11.2.js", "bin/background-compiled.js"]
  },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": ["libs/jquery-1.11.2.js", "bin/content-compiled.js"],
      "run_at": "document_start"
    }
  ],
  "manifest_version": 2
}
